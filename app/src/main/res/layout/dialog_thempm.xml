<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/material_dynamic_tertiary70"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Thêm Phiếu Mượn"
            android:textSize="30dp"
            android:textStyle="bold" />

<!--        <EditText-->
<!--            android:id="@+id/edtmpm"-->
<!--            android:background="@drawable/edittext_bg"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="30dp"-->
<!--            android:textColor="#FF0000"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:focusable="false"-->
<!--            android:focusableInTouchMode="false"-->
<!--            android:hint="Mã phiếu mượn" />-->

        <Spinner
            android:id="@+id/spinertentv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tên thể loại TV" />

        <Spinner
            android:id="@+id/spinertensach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tên thể loại sách" />

        <TextView
            android:id="@+id/txtngay"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:hint="Ngày" />

<!--        <TextView-->
<!--            android:id="@+id/edittienthuepm"-->
<!--            android:background="@drawable/edittext_bg"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:hint="Tiền thuê" />-->

        <CheckBox
            android:id="@+id/cbktt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Chưa trả sách" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnhuypm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:text="Hủy" />

            <Button
                android:id="@+id/btntpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:text="Thêm" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
