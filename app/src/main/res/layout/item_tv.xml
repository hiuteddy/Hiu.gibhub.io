<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/edittext_bg"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_maTV"
            android:text="Mã thành viên:"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_hotenTV"
            android:text="Họ tên:"
            android:layout_below="@+id/tv_maTV"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_namsinh"
            android:text="Năm sinh:"
            android:layout_below="@+id/tv_hotenTV"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_delete_thanhvien"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_close_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>